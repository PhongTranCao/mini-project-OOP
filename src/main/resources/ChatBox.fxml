<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="5" fx:controller="controller.ChatBoxController">
    <HBox alignment="CENTER" spacing="5">
        <Button text="Adjust Size" onAction="#handleAdjustSize"/>
        <Button text="Hide" onAction="#handleHideChat"/>
    </HBox>
    <TextArea fx:id="chatArea" editable="false" wrapText="true" prefHeight="150"/>
    <TextField fx:id="chatInputField" promptText="Type your question here..." onAction="#handleSendMessage"/>
    <Button text="Send" onAction="#handleSendMessage"/>
</VBox>
