<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane" fx:controller="controller.QueueController">
    <top>
        <HBox alignment="BASELINE_LEFT">
            <Button fx:id="backButton" onAction="#handleBack" text="Back" />
            <Label fx:id="statusLabel" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="How to use" onAction="#showDialog" />
        </HBox>
    </top>
    <center>
        <!-- Existing elements here -->
    </center>
    <bottom>
        <HBox spacing="5" alignment="CENTER">
            <TextField fx:id="inputField" promptText="Enter number:" />
            <Button text="Create" onAction="#handleCreate" />
            <Button text="Insert" onAction="#handleInsert" />
            <Button text="Delete" onAction="#handleDelete" />
            <Button text="Sort" onAction="#handleSort" />
            <Button text="Search" onAction="#handleSearch" />
            <Button text="Open Chatbox" onAction="#handleOpenChatbox" />
        </HBox>
    </bottom>
</BorderPane>
